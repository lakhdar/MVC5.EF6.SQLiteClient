<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion stocks</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">Acceuil
                <ul class="nav navbar-nav">
                    <li class="@(ViewBag.ActiveMenu=="Home" ? "active" : "")">@Html.ActionLink("Acceuil", "Index", "Home")</li>
                    <li class="@(ViewBag.ActiveMenu=="Client" ? "active" : "")">@Html.ActionLink("Client", "Index", "Client")</li>
                    <li class="@(ViewBag.ActiveMenu== "Produit" ? "active" : "")">@Html.ActionLink("Produit", "Index", "Produit")</li>
                    <li class="@(ViewBag.ActiveMenu== "Fournisseur" ? "active" : "")">@Html.ActionLink("Fournisseur", "Index", "Fournisseur")</li>
                    <li class="@(ViewBag.ActiveMenu== "Commande" ? "active" : "")">@Html.ActionLink("Commande", "Index", "Commande")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
